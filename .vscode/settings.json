{
	"eslint.workingDirectories": [
		{
			"mode": "auto"
		}
	],
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"editor.codeActionsOnSave": {
		"quickfix.biome": true,
		"source.organizeImports.biome": true
	}
}
